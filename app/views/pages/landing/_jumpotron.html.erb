<!-- JUMBOTRON -->
<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <h3>Loyalty Program App</h3>
        <p>Earn rewards at your favorite State College restaurants and bars without taking your 
        phone out of your pocket.</p>
        <p>Sign up to test Yab for a chance to win a slice of Canyon Pizza every day for a semester.</p>

        <div ng-controller='newUserCtrl'>
          <form role="form" ng-submit='addUser()'>
            <div class='form-group'>
              <input type="text" class="form-control" placeholder="Full Name" ng-model='newUser.name'>
            </div>
            <div class='form-group'>
              <input type="text" class="form-control" placeholder="Phone Number" ng-model='newUser.phone_number'>
            </div>
            <button type="submit" class="btn btn-success btn-block">I'm In!</button>
          </form>
        </div>

      </div>
      <div class="col-md-4 pull-right">
        <%= image_tag 'landing/iphone5yab2.png', class: 'img-iphone img-responsive'  %>
      </div>
    </div><!-- /.row -->
  </div><!-- /.container -->
</div>
